extends ../layouts/base


block content

    style.
        .note-editor {
            z-index: 0;
            border-color: #eee !important;
            margin-top: 20px
        }
    #main-content.relative.w-full.h-full.overflow-y-auto.bg-gray-50.p-3.pt-5(class='lg:ml-64 dark:bg-gray-900' style="height: 100vh")
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css')
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js')
        link(href='https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote-bs4.css', rel='stylesheet')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote-bs4.js')

        label.block.mb-2.text-sm.font-medium.text-gray-900(for='small-input', class='dark:text-white') Title
        input#small-input.block.w-full.p-2.text-gray-900.border.border-gray-300.rounded-lg.bg-gray-50.text-xs(type='text', class='focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500')

        label.block.mb-2.text-sm.font-medium.text-gray-900.mt-3(for='message', class='dark:text-white') Description
        textarea#message.block.w-full.text-sm.text-gray-900.bg-gray-50.rounded-lg.border.border-gray-300(rows='4', class='p-2.5 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder='Write your thoughts here...')

        textarea#summernote(style="z-index:0")
        // Example Button to trigger sending content
        button#sendButton Send Content
        script.
            $('textarea#summernote').summernote({
            placeholder: 'Edit something here',
            tabsize: 2,
            height: 500,
            toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'italic', 'underline', 'clear']],
            ['font', ['bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear']],
            ['fontname', ['fontname']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['height', ['height']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'hr']],
            ['view', ['fullscreen', 'codeview']],
            ['help', ['help']]
            ],
            });
        // Include Axios only
        script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
        script.
            // Function to send the content of the summernote editor
            function sendContent() {
            // Get the HTML content of the summernote editor (the content inside the textarea)
            var content = document.getElementById('summernote').value;
            // Prepare the data to send in the request
            var formData = new URLSearchParams();
            formData.append('editor', content);
            // Send a POST request with the content using axios
            axios.post('http://localhost:3000/api/v1/note/create', formData)
            .then(function (response) {
            console.log('Content successfully sent!', response.data);
            })
            .catch(function (error) {
            console.error('Error sending content:', error);
            });
            }
            // Example: Attach the sendContent function to a button click
            document.getElementById('sendButton').addEventListener('click', sendContent);